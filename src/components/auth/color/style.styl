.app-auth-color {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: linear-gradient(to top right, rgba(255, 82, 99, 0.9) 10%, rgba(255, 115, 129, 0.9) 65%, rgba(252, 189, 1, 0.9) 125%);
  min-height: 100vh;
  a.logo{
    width 120px
    height 59px
    background url("../../assets/logo.png") center no-repeat
    background-size contain
    overflow hidden
    text-indent -5000px
    display inline-block
  }
  .auth-header {
    flex-shrink: 0;
    margin: 0 0 30px -5px;
  }
  .auth-container {
    flex-shrink: 0;
    margin: 0 auto;
    width: 95%;
  }
  .auth-content{
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0 1px 3px 0 rgba(0,0,0,0.15);
    line-height: 1.5;
    text-align: center;
    .title{
      color: #151b26;
      font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
      font-size: 32px;
      font-weight: 400;
      line-height: 40px;
      padding: 45px 30px 30px;
      text-transform: none;
    }
    .btn-def{
      font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif; //TODO: ANALISAR USAR ESTAS FONTES NO ULOC
      font-weight: 400;
      background-color: #14aaf5 !important;
      border-radius: 4px;
      height: 40px;
      line-height: 40px;
      padding: 0 15px;
      font-size: 13px;
      &.login{
        /*background-color #26a69a !important*/
      }
    }
    .auth-separator {
      color: #b7bfc6;
      font-size: 24px;
      margin-top: 35px;
      position: relative;
      &:before, &:after {
        border-top: 1px solid #e0e6e8;
        content: "";
        height: 1px;
        left: 0;
        position: absolute;
        top: 50%;
        width: 45%;
        z-index: 0;
      }
      &:before {
        left: auto;
        right: 0;
      }
    }
    .form-input {
      margin-top: 30px;
      text-align: left;
      &.text-right{
        text-align: right;
      }
    }
    .form-input label {
      color: #848f99;
      font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
      font-size: 12px;
      font-weight: 500;
      display: block;
      margin-bottom: 7px;
    }
    .form-input input, .form-input select, .form-input textarea {
      background-color: #fff;
      border: 1px solid #d5dce0;
      border-radius: 4px;
      color: #151b26;
      height: 40px;
      margin: 0;
      padding: 0 0 0 10px;
      width: 100%;
    }
    .form-input input {
      line-height: normal;
    }
    .auth-form {
      padding: 0 30px;
    }
    form.auth-form {
      padding-bottom: 45px;
    }
    @media (min-width: 48em) {
      .auth-form {
        padding: 0 90px;
      }
    }
    .input--help {
      display: block;
      margin-top: 10px;
    }
    .input--help a {
      border-bottom: 1px dotted #848f99;
      color: #848f99;
      font-size: 11px;
      text-align: left;
      &:hover {
        border-bottom: 1px solid #848f99;
        text-decoration: none;
      }
    }
    .login-errors {
      padding: 10px;
      color: #900
    }
  }
  @media (min-width: 48em) {
    .auth-container {
      width: 585px;
    }
  }
  .auth-footer{
    color: #FFFFFF;
    text-align: center
    margin-top: 15px;
    font-size:14px;
    font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif; //TODO: ANALISAR USAR ESTAS FONTES NO ULOC
  }
}


